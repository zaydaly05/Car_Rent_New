<!DOCTYPE html>
<html>
<head>
    <title>All Users</title>
    <style>
body {
    background: url("/Images/p5.png") no-repeat center center fixed;
    background-size: cover;
    min-height: 100vh;
    margin: 0;
    font-family: 'Poppins', Arial, sans-serif;
    display: flex;
    flex-direction: column;
    align-items: center;
}
h1 {
    color: #fff;
    margin-top: 32px;
    text-shadow: 0 2px 8px #e86c06, 0 1px 0 #fffbe6;
    letter-spacing: 2px;
}
.table-card {
    background: rgba(255,255,255,0.93);
    border-radius: 18px;
    box-shadow: 0 8px 32px rgba(232,108,6,0.13);
    padding: 32px 24px;
    margin: 40px 0;
    width: 95vw;
    max-width: 1100px;
    overflow-x: auto;
}
table {
    border-collapse: collapse;
    width: 100%;
    font-size: 1.08em;
    min-width: 800px;
    background: transparent;
}
th, td {
    border: 1px solid #e86c06;
    padding: 14px 18px;
    text-align: left;
    word-break: break-all;
}
th {
    background: #fffbe6;
    color: #e86c06;
    font-weight: 600;
    letter-spacing: 1px;
}
tr:nth-child(even) {
    background: #fff7ed;
}
tr:nth-child(odd) {
    background: #fff;
}
button, .delete-btn {
    background: #e86c06;
    color: #fff;
    border: none;
    border-radius: 6px;
    padding: 7px 18px;
    cursor: pointer;
    font-size: 1em;
    transition: background 0.2s;
}
button:hover, .delete-btn:hover {
    background: #b35404;
}
form {
    display: inline;
}
@media (max-width: 900px) {
    .table-card { padding: 10px; }
    table { min-width: 600px; font-size: 0.97em; }
}
    </style>
</head>
<body>
    <h1>All Users</h1>
    <div class="table-card">
        <table>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Password</th>
                <th>Licence</th>
                <th>Registeration</th>
                <th>Car</th>
                <th>Created At</th>
                <th>_id</th>
                <th>__v</th>
            </tr>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.FullName %></td>
                    <td><%= user.Email %></td>
                    <td><%= user.Phone %></td>
                    <td><%= user.Password %></td>
                    <td><%= user.licence %></td>
                    <td><%= user.Registeration %></td>
                    <td><%= user.car %></td>
                    <td><%= user.createdAt ? user.createdAt.toLocaleString() : '' %></td>
                    <td><%= user._id %></td>
                    <td><%= user.__v %></td>
                    <td>
                    <form action="/delete-user" method="POST" onsubmit="return confirm('Delete this user?');">
                   <input type="hidden" name="userId" value="<%= user._id %>">
                   <button type="submit" style="color:red;">Delete</button>
                   </form>
                   </td>
                </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>